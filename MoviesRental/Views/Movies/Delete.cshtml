@model MoviesRental.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-xl rounded-2xl p-8 border border-gray-200">

    <!-- Header -->
    <h1 class="text-3xl font-bold text-red-600 text-center mb-2">
        Delete Movie
    </h1>
    <p class="text-center text-gray-600 mb-8">
        Are you sure you want to delete this movie?
    </p>

    <!-- Movie Details -->
    <div class="bg-gray-50 rounded-xl p-6 border border-gray-200">
        <h2 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
            <i class="fas fa-film text-red-500 mr-2"></i> Movie Details
        </h2>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">

            <div>
                <dt class="font-semibold text-gray-700">Title</dt>
                <dd class="text-gray-900">@Model.Title</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-700">Genre</dt>
                <dd class="text-gray-900">@Model.Genre</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-700">Release Year</dt>
                <dd class="text-gray-900">@Model.ReleaseYear</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-700">Description</dt>
                <dd class="text-gray-900">@Model.Description</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-700">Stock</dt>
                <dd class="text-gray-900">@Model.Stock</dd>
            </div>

            <div>
                <dt class="font-semibold text-gray-700">Rental Price</dt>
                <dd class="text-gray-900">@Model.RentalPrice</dd>
            </div>

        </dl>
    </div>

    <!-- Actions -->
    <form asp-action="Delete" class="mt-8 flex items-center justify-center gap-4">
        <input type="hidden" asp-for="MovieId" />

        <button type="submit"
                class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-3 rounded-xl shadow-md transition-all">
            <i class="fas fa-trash mr-2"></i> Delete
        </button>

        <a asp-action="Index"
           class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold px-6 py-3 rounded-xl shadow-md transition-all">
            <i class="fas fa-arrow-left mr-2"></i> Back to List
        </a>
    </form>

</div>
