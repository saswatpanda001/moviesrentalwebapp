@model MoviesRental.Models.Movie

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Edit Movie</h1>

    <form asp-action="Edit" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm"></div>

        <input type="hidden" asp-for="MovieId" />

        <!-- Title -->
        <div>
            <label asp-for="Title" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Title"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Title" class="text-red-600 text-sm"></span>
        </div>

        <!-- Genre -->
        <div>
            <label asp-for="Genre" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Genre"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Genre" class="text-red-600 text-sm"></span>
        </div>

        <!-- Release Year -->
        <div>
            <label asp-for="ReleaseYear" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="ReleaseYear"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="ReleaseYear" class="text-red-600 text-sm"></span>
        </div>

        <!-- Description -->
        <div>
            <label asp-for="Description" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Description"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Description" class="text-red-600 text-sm"></span>
        </div>

        <!-- Stock -->
        <div>
            <label asp-for="Stock" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="Stock"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="Stock" class="text-red-600 text-sm"></span>
        </div>

        <!-- Rental Price -->
        <div>
            <label asp-for="RentalPrice" class="block text-sm font-medium text-gray-700"></label>
            <input asp-for="RentalPrice"
                   class="mt-1 block w-full rounded-lg border-gray-300 shadow-sm focus:ring-blue-500 focus:border-blue-500" />
            <span asp-validation-for="RentalPrice" class="text-red-600 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex items-center space-x-4 pt-4">
            <button type="submit"
                    class="px-6 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700">
                Save
            </button>

            <a asp-action="Index"
               class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg shadow hover:bg-gray-300">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

