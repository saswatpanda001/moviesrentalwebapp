@model MoviesRental.Models.Movie

@{
    ViewData["Title"] = "Create Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="min-h-screen bg-gray-50 py-8">
    <div class="max-w-2xl mx-auto">
        <!-- Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-900">Add New Movie</h1>
            <p class="text-gray-600 mt-2">Fill in the details to add a new movie to the collection</p>
        </div>

        <!-- Form Card -->
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="px-6 py-4 border-b border-gray-200">
                <h2 class="text-xl font-semibold text-gray-800">Movie Information</h2>
            </div>

            <form asp-action="Create" class="px-6 py-6">
                <div asp-validation-summary="ModelOnly" class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-700"></div>

                <div class="space-y-6">
                    <!-- Title -->
                    <div>
                        <label asp-for="Title" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Title"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                               placeholder="Enter movie title">
                        <span asp-validation-for="Title" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Genre -->
                    <div>
                        <label asp-for="Genre" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="Genre"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                               placeholder="Enter genre (e.g., Action, Drama, Comedy)">
                        <span asp-validation-for="Genre" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Release Year -->
                    <div>
                        <label asp-for="ReleaseYear" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <input asp-for="ReleaseYear"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                               placeholder="Enter release year">
                        <span asp-validation-for="ReleaseYear" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Description -->
                    <div>
                        <label asp-for="Description" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <textarea asp-for="Description"
                                  rows="4"
                                  class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                                  placeholder="Enter movie description"></textarea>
                        <span asp-validation-for="Description" class="text-red-500 text-sm mt-1"></span>
                    </div>

                    <!-- Rental Price -->
                    <div>
                        <label asp-for="RentalPrice" class="block text-sm font-medium text-gray-700 mb-2"></label>
                        <div class="relative">
                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                <span class="text-gray-500">$</span>
                            </div>
                            <input asp-for="RentalPrice"
                                   type="number"
                                   step="0.01"
                                   class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition duration-200"
                                   placeholder="0.00">
                        </div>
                        <span asp-validation-for="RentalPrice" class="text-red-500 text-sm mt-1"></span>
                    </div>
                </div>

                <!-- Buttons -->
                <div class="flex items-center justify-between pt-6 border-t border-gray-200">
                    <a asp-action="Index"
                       class="inline-flex items-center px-6 py-3 border border-gray-300 text-sm font-medium rounded-lg text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
                        </svg>
                        Back to List
                    </a>
                    <button type="submit"
                            class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition duration-200">
                        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
                        </svg>
                        Create Movie
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Add some interactive features
        document.addEventListener('DOMContentLoaded', function() {
            // Auto-format price input
            const priceInput = document.querySelector('input[asp-for="RentalPrice"]');
            if (priceInput) {
                priceInput.addEventListener('blur', function() {
                    if (this.value) {
                        this.value = parseFloat(this.value).toFixed(2);
                    }
                });
            }

            // Auto-capitalize genre
            const genreInput = document.querySelector('input[asp-for="Genre"]');
            if (genreInput) {
                genreInput.addEventListener('blur', function() {
                    if (this.value) {
                        this.value = this.value.charAt(0).toUpperCase() + this.value.slice(1).toLowerCase();
                    }
                });
            }
        });
    </script>
}
