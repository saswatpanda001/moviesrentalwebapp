@model MoviesRental.Models.Review

@{
    ViewData["Title"] = "Create Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create Review</h1>

    <form asp-action="Create" class="space-y-6">
        <div asp-validation-summary="ModelOnly" class="text-red-500 mb-4"></div>

        <!-- User -->
        <div>
            <label asp-for="UserId" class="block font-semibold text-gray-700 mb-1">User</label>
            <select asp-for="UserId" asp-items="ViewBag.UserId"
                    class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition p-3">
                <option value="">-- Select User --</option>
            </select>
            <span asp-validation-for="UserId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Movie -->
        <div>
            <label asp-for="MovieId" class="block font-semibold text-gray-700 mb-1">Movie</label>
            <select asp-for="MovieId" asp-items="ViewBag.MovieId"
                    class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition p-3">
                <option value="">-- Select Movie --</option>
            </select>
            <span asp-validation-for="MovieId" class="text-red-500 text-sm"></span>
        </div>

        <!-- Rating -->
        <div>
            <label asp-for="Rating" class="block font-semibold text-gray-700 mb-1">Rating (1-5)</label>
            <input asp-for="Rating" type="number" min="1" max="5"
                   class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition p-3"
                   placeholder="Enter rating from 1 to 5" />
            <span asp-validation-for="Rating" class="text-red-500 text-sm"></span>
        </div>

        <!-- Comment -->
        <div>
            <label asp-for="Comment" class="block font-semibold text-gray-700 mb-1">Comment</label>
            <textarea asp-for="Comment" rows="4"
                      class="w-full rounded-lg border-gray-300 focus:border-blue-500 focus:ring focus:ring-blue-200 transition p-3"
                      placeholder="Enter your review comments"></textarea>
            <span asp-validation-for="Comment" class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit -->
        <div class="flex space-x-4">
            <button type="submit"
                    class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow transition">
                Submit Review
            </button>
            <a asp-action="Index"
               class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-3 rounded-lg text-center transition">
                Back to List
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
