@model MoviesRental.Models.Review

@{
    ViewData["Title"] = "Create Review";
}

<div class="max-w-xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Create Review</h1>

    <!-- Success/Error Messages -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="mb-4 p-4 bg-green-50 border border-green-200 rounded-lg text-green-800">
            @TempData["SuccessMessage"]
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="mb-4 p-4 bg-red-50 border border-red-200 rounded-lg text-red-800">
            @TempData["ErrorMessage"]
        </div>
    }

    <form asp-action="Create" method="post" class="space-y-6">
        @Html.AntiForgeryToken()

        <!-- Movie Selection -->
        <div>
            <label for="MovieId" class="block font-semibold text-gray-700 mb-1">Movie *</label>
            <select name="MovieId" id="MovieId" required
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500">
                <option value="">-- Select Movie --</option>
                @foreach (var movie in ViewBag.Movies)
                {
                    <option value="@movie.MovieId">@movie.Title</option>
                }
            </select>
        </div>

        <!-- Rating -->
        <div>
            <label for="Rating" class="block font-semibold text-gray-700 mb-1">Rating (1-5) *</label>
            <input type="number" name="Rating" id="Rating" min="1" max="5" required
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                   placeholder="Enter rating from 1 to 5">
        </div>

        <!-- Comment -->
        <div>
            <label for="Comment" class="block font-semibold text-gray-700 mb-1">Comment</label>
            <textarea name="Comment" id="Comment" rows="4"
                      class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500"
                      placeholder="Enter your review comments"></textarea>
        </div>

        <!-- Submit -->
        <div class="flex space-x-4">
            <button type="submit"
                    class="flex-1 bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 rounded-lg shadow transition">
                Submit Review
            </button>
            <a asp-action="Index"
               class="flex-1 bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold py-3 rounded-lg text-center transition">
                Back to List
            </a>
        </div>
    </form>
</div>
