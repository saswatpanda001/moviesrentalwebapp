@model MoviesRental.Models.Review

@{
    ViewData["Title"] = "Delete Review";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-2xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">
    <h1 class="text-3xl font-bold text-red-600 mb-4">Delete Review</h1>

    <p class="text-lg text-gray-700 mb-6">
        Are you sure you want to delete this review?
    </p>

    <div class="bg-red-50 border border-red-200 rounded-lg p-6 mb-8">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Review Details</h4>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-4">
            <div>
                <dt class="font-medium text-gray-600">Rating</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.Rating)</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-600">Comment</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.Comment)</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-600">Created At</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.CreatedAt)</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-600">Movie ID</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.Movie.MovieId)</dd>
            </div>

            <div>
                <dt class="font-medium text-gray-600">User ID</dt>
                <dd class="text-gray-900">@Html.DisplayFor(model => model.User.UserId)</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" class="flex items-center gap-4">
        <input type="hidden" asp-for="ReviewId" />

        <button type="submit"
                class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded-lg shadow transition">
            Delete
        </button>

        <a asp-action="Index"
           class="text-gray-700 hover:text-gray-900 font-medium underline">
            Cancel / Back to List
        </a>
    </form>
</div>
