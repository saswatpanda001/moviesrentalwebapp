@model MoviesRental.Models.Movie
@{
    ViewData["Title"] = Model.Title;
    double averageRating = ViewBag.AverageRating;
    int totalReviews = ViewBag.TotalReviews;
    bool hasUserReviewed = ViewBag.HasUserReviewed;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Success/Error Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="bg-green-50 border border-green-200 rounded-2xl p-4 mb-6 flex items-center space-x-3 animate-pulse">
                <i class="fas fa-check-circle text-green-500 text-lg"></i>
                <div class="text-green-700 font-medium">@TempData["SuccessMessage"]</div>
                <button type="button" class="ml-auto text-green-500 hover:text-green-700" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-2xl p-4 mb-6 flex items-center space-x-3">
                <i class="fas fa-exclamation-triangle text-red-500 text-lg"></i>
                <div class="text-red-700 font-medium">@TempData["ErrorMessage"]</div>
                <button type="button" class="ml-auto text-red-500 hover:text-red-700" onclick="this.parentElement.remove()">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        }

        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Main Content -->
            <div class="lg:col-span-3 space-y-8">
                <!-- Movie Details Card -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 overflow-hidden">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-0">
                        <!-- Movie Poster -->
                        <div class="md:col-span-1 bg-gradient-to-br from-blue-500 to-purple-600 p-8 flex items-center justify-center">
                            <div class="text-center">
                                <i class="fas fa-film text-white text-6xl mb-4"></i>
                                <div class="bg-white/20 rounded-xl p-3">
                                    <p class="text-white font-bold text-2xl">@Model.ReleaseYear</p>
                                    <p class="text-white/80 text-sm">Released</p>
                                </div>
                            </div>
                        </div>

                        <!-- Movie Info -->
                        <div class="md:col-span-3 p-8">
                            <!-- Header -->
                            <div class="flex justify-between items-start mb-6">
                                <div>
                                    <h1 class="text-4xl font-bold bg-gradient-to-r from-gray-900 to-blue-600 bg-clip-text text-transparent mb-2">
                                        @Model.Title
                                    </h1>

                                    <!-- Rating Display -->
                                    <div class="flex items-center space-x-4 mb-4">
                                        <div class="flex space-x-1">
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star text-xl @(i <= averageRating ? "text-yellow-400" : "text-gray-300")"></i>
                                            }
                                        </div>
                                        <div class="text-gray-600">
                                            <span class="font-semibold text-2xl text-gray-900">@averageRating.ToString("0.0")</span>
                                            <span class="text-lg">/5</span>
                                            <span class="text-gray-500 ml-2">(@totalReviews @(totalReviews == 1 ? "review" : "reviews"))</span>
                                        </div>
                                    </div>
                                </div>

                                <!-- Stock Badge -->
                                <div class="text-right">
                                    <span class="@(Model.Stock > 0 ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800") px-4 py-2 rounded-full font-semibold text-sm">
                                        @if (Model.Stock > 0)
                                        {
                                            <i class="fas fa-check-circle mr-1"></i>
                                            <span>@Model.Stock in stock</span>
                                        }
                                        else
                                        {
                                            <i class="fas fa-times-circle mr-1"></i>
                                            <span>Out of stock</span>
                                        }
                                    </span>
                                </div>
                            </div>

                            <!-- Description -->
                            <div class="mb-8">
                                <h3 class="text-lg font-semibold text-gray-900 mb-3 flex items-center">
                                    <i class="fas fa-align-left text-blue-500 mr-2"></i>
                                    Synopsis
                                </h3>
                                <p class="text-gray-700 text-lg leading-relaxed">@Model.Description</p>
                            </div>

                            <!-- Movie Details Grid -->
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6 mb-8">
                                <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-xl">
                                    <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-tag text-white"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">Genre</p>
                                        <p class="font-semibold text-gray-900">@Model.Genre</p>
                                    </div>
                                </div>

                                <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-xl">
                                    <div class="w-12 h-12 bg-green-500 rounded-lg flex items-center justify-center">
                                        <i class="fas fa-dollar-sign text-white"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">Rental Price</p>
                                        <p class="font-semibold text-green-600 text-xl">@Model.RentalPrice.ToString("C2")<span class="text-sm text-gray-600">/day</span></p>
                                    </div>
                                </div>
                            </div>

                            <!-- Action Buttons -->
                            <div class="flex space-x-4">
                                <button class="add-to-cart bg-gradient-to-r from-blue-500 to-purple-600 text-white px-8 py-4 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center space-x-3 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none"
                                        data-movie-id="@Model.MovieId"
                                        @(Model.Stock <= 0 ? "disabled" : "")>
                                    @if (Model.Stock <= 0)
                                    {
                                        <i class="fas fa-times"></i>
                                        <span>Out of Stock</span>
                                    }
                                    else
                                    {
                                        <i class="fas fa-cart-plus"></i>
                                        <span>Add to Cart</span>
                                    }
                                </button>

                                <a href="@Url.Action("Index", "MyMovies")"
                                   class="bg-white border border-gray-300 text-gray-700 px-8 py-4 rounded-xl font-semibold hover:bg-gray-50 transition-all duration-200 transform hover:-translate-y-0.5 flex items-center space-x-3">
                                    <i class="fas fa-arrow-left"></i>
                                    <span>Back to Movies</span>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Reviews Section -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20">
                    <!-- Reviews Header -->
                    <div class="px-8 py-6 border-b border-gray-200">
                        <div class="flex items-center justify-between">
                            <h2 class="text-2xl font-bold text-gray-900 flex items-center">
                                <i class="fas fa-star text-yellow-400 mr-3"></i>
                                Customer Reviews
                                <span class="bg-blue-500 text-white text-sm font-semibold ml-3 px-3 py-1 rounded-full">@totalReviews</span>
                            </h2>
                        </div>
                    </div>

                    <!-- Reviews Content -->
                    <div class="p-8">
                        @if (Model.Reviews.Any())
                        {
                            <div class="space-y-8">
                                @foreach (var review in Model.Reviews.OrderByDescending(r => r.CreatedAt))
                                {
                                    <div class="bg-gray-50 rounded-2xl p-6 hover:bg-white transition-all duration-200 border border-gray-200">
                                        <div class="flex justify-between items-start mb-4">
                                            <div class="flex items-center space-x-4">
                                                <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold text-lg">
                                                    @review.User.Name?[0]
                                                </div>
                                                <div>
                                                    <h4 class="font-bold text-gray-900">@review.User.Name</h4>
                                                    <div class="flex items-center space-x-2 mt-1">
                                                        <div class="flex space-x-1">
                                                            @for (int i = 1; i <= 5; i++)
                                                            {
                                                                <i class="fas fa-star @(i <= (review.Rating ?? 0) ? "text-yellow-400" : "text-gray-300")"></i>
                                                            }
                                                        </div>
                                                        <span class="text-gray-500 text-sm">(@review.Rating/5)</span>
                                                    </div>
                                                </div>
                                            </div>
                                            <span class="text-gray-500 text-sm bg-white px-3 py-1 rounded-full border">
                                                @review.CreatedAt.ToString("MMM dd, yyyy")
                                            </span>
                                        </div>

                                        <p class="text-gray-700 text-lg leading-relaxed mb-4">@review.Comment</p>

                                        @if (MoviesRental.Controllers.SessionManager.UserId == review.UserId)
                                        {
                                            <form method="post" action="@Url.Action("DeleteReview", "MyMovies")"
                                                  onsubmit="return confirm('Are you sure you want to delete your review?')">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="reviewId" value="@review.ReviewId" />
                                                <button type="submit"
                                                        class="text-red-600 hover:text-red-800 font-medium flex items-center space-x-2 transition-colors">
                                                    <i class="fas fa-trash"></i>
                                                    <span>Delete Review</span>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-12">
                                <i class="fas fa-comments text-6xl text-gray-300 mb-4"></i>
                                <h3 class="text-xl font-semibold text-gray-600 mb-2">No reviews yet</h3>
                                <p class="text-gray-500">Be the first to share your thoughts about this movie!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Sidebar -->
            <div class="lg:col-span-1 space-y-6">
                @if (MoviesRental.Controllers.SessionManager.IsLoggedIn)
                {
                    if (!hasUserReviewed)
                    {
                        <!-- Write Review Card -->
                        <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 p-6 sticky top-6">
                            <h3 class="text-xl font-bold text-gray-900 mb-6 flex items-center">
                                <i class="fas fa-edit text-blue-500 mr-2"></i>
                                Write a Review
                            </h3>

                            <form method="post" action="@Url.Action("SubmitReview", "MyMovies")" id="reviewForm">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="MovieId" value="@Model.MovieId" />

                                <!-- Rating -->
                                <div class="mb-6">
                                    <label class="block text-sm font-semibold text-gray-700 mb-3">Your Rating</label>
                                    <div class="flex space-x-1 mb-2" id="starRating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            <button type="button" class="text-2xl text-gray-300 hover:text-yellow-400 transition-colors"
                                                    data-rating="@i" onclick="setRating(@i)">
                                                <i class="fas fa-star"></i>
                                            </button>
                                        }
                                    </div>
                                    <input type="hidden" name="Rating" id="selectedRating" required>
                                    <p class="text-xs text-gray-500" id="ratingText">Select your rating</p>
                                </div>

                                <!-- Comment -->
                                <div class="mb-6">
                                    <label class="block text-sm font-semibold text-gray-700 mb-3">
                                        Your Review <span class="text-red-500">*</span>
                                    </label>
                                    <textarea name="Comment" id="reviewComment"
                                      class="w-full px-4 py-3 border border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200 resize-none"
                                      rows="5"
                                      placeholder="Share your detailed thoughts about this movie (minimum 10 characters)..."
                                      minlength="10"
                                      oninput="validateReview()"
                                      required></textarea>
                                    <div class="flex justify-between items-center mt-2">
                                        <p class="text-xs text-gray-500">
                                            <span id="charCount">0</span>/10 characters minimum
                                        </p>
                                        <p class="text-xs text-red-500 hidden" id="charError">
                                            <i class="fas fa-exclamation-circle mr-1"></i>
                                            Minimum 10 characters required
                                        </p>
                                    </div>
                                </div>

                                <button type="submit" id="submitReview"
                                        class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 disabled:opacity-50 disabled:cursor-not-allowed disabled:transform-none flex items-center justify-center space-x-2"
                                        disabled>
                                    <i class="fas fa-paper-plane"></i>
                                    <span>Submit Review</span>
                                </button>
                            </form>
                        </div>
                    }
                    else
                    {
                        <!-- Already Reviewed Card -->
                        <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 p-6 text-center">
                            <div class="w-16 h-16 bg-green-500 rounded-full flex items-center justify-center mx-auto mb-4">
                                <i class="fas fa-check text-white text-2xl"></i>
                            </div>
                            <h4 class="text-lg font-semibold text-gray-900 mb-2">Review Submitted</h4>
                            <p class="text-gray-600 text-sm">Thank you for sharing your feedback!</p>
                        </div>
                    }
                }
                else
                {
                    <!-- Login Prompt Card -->
                    <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 p-6 text-center">
                        <div class="w-16 h-16 bg-blue-500 rounded-full flex items-center justify-center mx-auto mb-4">
                            <i class="fas fa-user-circle text-white text-2xl"></i>
                        </div>
                        <h4 class="text-lg font-semibold text-gray-900 mb-2">Sign In to Review</h4>
                        <p class="text-gray-600 text-sm mb-4">Please login to share your thoughts about this movie.</p>
                        <a href="@Url.Action("Login", "Account")"
                           class="w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 inline-flex items-center justify-center space-x-2">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login Now</span>
                        </a>
                    </div>
                }

                <!-- Quick Stats Card -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 p-6">
                    <h4 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-chart-bar text-purple-500 mr-2"></i>
                        Quick Stats
                    </h4>
                    <div class="space-y-3">
                        <div class="flex justify-between items-center p-3 bg-blue-50 rounded-xl">
                            <span class="text-gray-600">Total Reviews</span>
                            <span class="font-bold text-blue-600">@totalReviews</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-green-50 rounded-xl">
                            <span class="text-gray-600">Average Rating</span>
                            <span class="font-bold text-green-600">@averageRating.ToString("0.0")/5</span>
                        </div>
                        <div class="flex justify-between items-center p-3 bg-purple-50 rounded-xl">
                            <span class="text-gray-600">Rental Price</span>
                            <span class="font-bold text-purple-600">@Model.RentalPrice.ToString("C2")/day</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        let currentRating = 0;

        function setRating(rating) {
            currentRating = rating;
            document.getElementById('selectedRating').value = rating;

            // Update star display
            const stars = document.querySelectorAll('#starRating button');
            stars.forEach((star, index) => {
                if (index < rating) {
                    star.classList.remove('text-gray-300');
                    star.classList.add('text-yellow-400');
                } else {
                    star.classList.remove('text-yellow-400');
                    star.classList.add('text-gray-300');
                }
            });

            // Update rating text
            const ratingText = document.getElementById('ratingText');
            ratingText.textContent = `${rating} Star${rating > 1 ? 's' : ''}`;
            ratingText.className = 'text-xs text-yellow-600 font-medium';

            validateReview();
        }

        function validateReview() {
            const comment = document.getElementById('reviewComment').value.trim();
            const charCount = comment.length;
            const submitButton = document.getElementById('submitReview');
            const charError = document.getElementById('charError');
            const charCountDisplay = document.getElementById('charCount');

            charCountDisplay.textContent = charCount;

            const isValid = currentRating > 0 && charCount >= 10;

            if (charCount > 0 && charCount < 10) {
                charError.classList.remove('hidden');
                charCountDisplay.classList.add('text-red-500');
            } else {
                charError.classList.add('hidden');
                charCountDisplay.classList.remove('text-red-500');
                charCountDisplay.classList.add('text-green-500');
            }

            submitButton.disabled = !isValid;
        }

        document.addEventListener('DOMContentLoaded', function() {
            document.querySelectorAll('.add-to-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const movieId = this.dataset.movieId;
                    const button = this;

                    // Disable button during request
                    button.disabled = true;
                    button.innerHTML = '<i class="fas fa-spinner fa-spin"></i><span>Adding...</span>';

                    // Create form data instead of JSON
                    const formData = new FormData();
                    formData.append('movieId', movieId);
                    formData.append('quantity', '1');
                    formData.append('rentalDays', '7');

                    fetch('/Cart/AddToCart', {
                        method: 'POST',
                        body: formData
                    })
                    .then(response => {
                        if (!response.ok) {
                            throw new Error('Network response was not ok');
                        }
                        return response.json();
                    })
                    .then(data => {
                        if (data.success) {
                            button.innerHTML = '<i class="fas fa-check"></i><span>Added!</span>';
                            button.classList.remove('from-blue-500', 'to-purple-600');
                            button.classList.add('from-green-500', 'to-green-600');

                            // Update cart count in navbar
                            updateCartCount();

                            setTimeout(() => {
                                button.innerHTML = '<i class="fas fa-cart-plus"></i><span>Add to Cart</span>';
                                button.classList.remove('from-green-500', 'to-green-600');
                                button.classList.add('from-blue-500', 'to-purple-600');
                                button.disabled = false;
                            }, 2000);
                        } else {
                            alert(data.message || 'Error adding to cart');
                            button.innerHTML = '<i class="fas fa-cart-plus"></i><span>Add to Cart</span>';
                            button.disabled = false;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Error adding to cart. Please try again.');
                        button.innerHTML = '<i class="fas fa-cart-plus"></i><span>Add to Cart</span>';
                        button.disabled = false;
                    });
                });
            });

            function updateCartCount() {
                // Update cart count in navbar
                const cartCount = document.querySelector('.cart-count');
                if (cartCount) {
                    const currentCount = parseInt(cartCount.textContent) || 0;
                    cartCount.textContent = currentCount + 1;
                    cartCount.classList.add('animate-ping');
                    setTimeout(() => cartCount.classList.remove('animate-ping'), 1000);
                    }
                }
            });


    </script>
</body>
</html>

