@{
    ViewData["Title"] = "Movie Search";
    var movies = ViewBag.Movies as List<MoviesRental.Models.MovieApi> ?? new List<MoviesRental.Models.MovieApi>();
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gray-50 min-h-screen">
    <div class="container mx-auto px-4 py-8">
        <!-- Header -->
        <h1 class="text-3xl font-bold text-gray-900 mb-8 flex items-center">
            <i class="fas fa-search mr-3 text-blue-600"></i>
            Discover Movies
        </h1>

        <!-- Search Form -->
        <div class="bg-white rounded-2xl shadow-lg p-6 mb-8">
            <form method="get" asp-action="Search" id="searchForm">
                <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-end">
                    <div class="md:col-span-5">
                        <label for="searchTerm" class="block text-sm font-semibold text-gray-700 mb-2">
                            Movie Title *
                        </label>
                        <input type="text" id="searchTerm" name="searchTerm"
                               value="@ViewBag.SearchTerm" required minlength="4"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                               placeholder="Enter movie title (min. 4 characters)"
                               oninvalid="this.setCustomValidity('Please enter at least 4 characters')"
                               oninput="this.setCustomValidity('')">
                        <p class="text-xs text-gray-500 mt-1">Minimum 4 characters required</p>
                    </div>

                    <div class="md:col-span-3">
                        <label for="year" class="block text-sm font-semibold text-gray-700 mb-2">
                            Release Year
                        </label>
                        <input type="number" id="year" name="year"
                               value="@ViewBag.SearchYear" min="1900" max="2025"
                               class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all"
                               placeholder="2023"
                               oninvalid="this.setCustomValidity('Please enter a valid year between 1900-2025')"
                               oninput="this.setCustomValidity('')">
                        <p class="text-xs text-gray-500 mt-1">1900-2025</p>
                    </div>

                    <div class="md:col-span-2">
                        <label for="plot" class="block text-sm font-semibold text-gray-700 mb-2">
                            Plot Detail
                        </label>
                        <select id="plot" name="plot"
                                class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all">
                            <option value="short">Short Plot</option>
                            <option value="full">Full Plot</option>
                        </select>
                    </div>

                    <div class="md:col-span-2">
                        <button type="submit"
                                class="w-full bg-blue-600 text-white py-3 px-6 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all flex items-center justify-center">
                            <i class="fas fa-search mr-2"></i>
                            Search
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <!-- Error Message -->
        @if (ViewBag.Error != null)
        {
            <div class="bg-red-50 border border-red-200 rounded-xl p-4 mb-6 flex items-center">
                <i class="fas fa-exclamation-triangle text-red-500 mr-3 text-lg"></i>
                <div class="text-red-700">
                    <strong class="font-semibold">Error:</strong> @ViewBag.Error
                </div>
            </div>
        }

        <!-- Results Count -->
        @if (movies.Any())
        {
            <div class="bg-green-50 border border-green-200 rounded-xl p-4 mb-6 flex items-center">
                <i class="fas fa-info-circle text-green-600 mr-3 text-lg"></i>
                <div class="text-green-800">
                    <strong>Found @ViewBag.TotalResults movies</strong> for "@ViewBag.SearchTerm"
                </div>
            </div>
        }

        <!-- Movies Grid -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            @foreach (var movie in movies)
            {
                <div class="bg-white rounded-xl shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 overflow-hidden group">
                    <div class="relative">
                        <img src="@movie.Poster" alt="@movie.Title"
                             class="w-full h-80 object-cover group-hover:scale-105 transition-transform duration-300"
                             onerror="this.src='https://via.placeholder.com/300x400/d1d5db/6b7280?text=No+Poster'">
                        <div class="absolute top-3 right-3">
                            <span class="bg-blue-600 text-white px-2 py-1 rounded-full text-xs font-semibold">
                                @movie.Year
                            </span>
                        </div>
                    </div>
                    <div class="p-4">
                        <h3 class="font-semibold text-gray-900 text-lg mb-1 line-clamp-2">@movie.Title</h3>
                        <p class="text-gray-500 text-sm mb-4">@movie.Type</p>
                        <a href="@Url.Action("MovieDetails", new { imdbId = movie.imdbID })"
                           class="w-full bg-blue-600 text-white py-2 px-4 rounded-lg hover:bg-blue-700 transition-colors flex items-center justify-center text-sm font-medium">
                            <i class="fas fa-eye mr-2"></i>
                            View Details
                        </a>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination -->
        @if (movies.Any() && ViewBag.TotalResults != null)
        {
            var totalResultsStr = ViewBag.TotalResults.ToString();
            var currentPage = ViewBag.CurrentPage ?? 1;

            if (int.TryParse(totalResultsStr, out int totalResults) && totalResults > 10)
            {
                var totalPages = (int)Math.Ceiling(totalResults / 10.0);

                <div class="flex justify-center items-center space-x-4 mt-8">
                    @if (currentPage > 1)
                    {
                        <a href="@Url.Action("Search", new { searchTerm = ViewBag.SearchTerm, year = ViewBag.SearchYear, page = currentPage - 1 })"
                           class="bg-white border border-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-50 transition-colors flex items-center">
                            <i class="fas fa-chevron-left mr-2"></i>
                            Previous
                        </a>
                    }

                    <span class="bg-gray-100 text-gray-700 py-2 px-4 rounded-lg font-medium">
                        Page @currentPage of @totalPages
                    </span>

                    @if (currentPage < totalPages)
                    {
                        <a href="@Url.Action("Search", new { searchTerm = ViewBag.SearchTerm, year = ViewBag.SearchYear, page = currentPage + 1 })"
                           class="bg-white border border-gray-300 text-gray-700 py-2 px-4 rounded-lg hover:bg-gray-50 transition-colors flex items-center">
                            Next
                            <i class="fas fa-chevron-right ml-2"></i>
                        </a>
                    }
                </div>
            }
        }

        <!-- No Results Message -->
        @if (!movies.Any() && string.IsNullOrEmpty(ViewBag.Error) && !string.IsNullOrEmpty(ViewBag.SearchTerm))
        {
            <div class="text-center py-12">
                <i class="fas fa-film text-gray-400 text-6xl mb-4"></i>
                <h3 class="text-xl font-semibold text-gray-600 mb-2">No movies found</h3>
                <p class="text-gray-500">Try adjusting your search terms</p>
            </div>
        }
    </div>

    <script>
        // Client-side validation
        document.getElementById('searchForm').addEventListener('submit', function(e) {
            const searchTerm = document.getElementById('searchTerm').value.trim();
            const year = document.getElementById('year').value;

            if (searchTerm.length < 4) {
                e.preventDefault();
                alert('Please enter at least 4 characters for movie title');
                return false;
            }

            if (year && (year < 1900 || year > 2025)) {
                e.preventDefault();
                alert('Please enter a valid year between 1900 and 2025');
                return false;
            }
        });
    </script>
</body>
</html>