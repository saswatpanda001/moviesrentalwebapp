@model MoviesRental.ViewModels.UserDashboardViewModel
@{
    ViewData["Title"] = "User Dashboard";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <!-- Header -->
    <div>
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center space-x-4">
                   
                    <div>
                        <h1 class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                            User Dashboard
                        </h1>
                        <p class="text-sm text-gray-600">Welcome back!</p>
                    </div>
                </div>

                <div class="flex items-center space-x-6">
                 

                    <!-- User Info -->
                    <div class="flex items-center space-x-3">
                        <div class="text-right">
                            <p class="font-semibold text-gray-900">@Context.Session.GetString("UserName")</p>
                            <p class="text-sm text-gray-600">@Context.Session.GetString("UserRole")</p>
                        </div>
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-full flex items-center justify-center text-white font-semibold shadow-lg">
                            @Context.Session.GetString("UserName")?[0]
                        </div>
                    </div>

                 
                  
                </div>
            </div>
        </div>
    </div>

    <!-- Dashboard Content -->
    <main class="max-w-7xl mx-auto py-8 px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-1 lg:grid-cols-4 gap-8">
            <!-- Left Sidebar - Stats -->
            <div class="lg:col-span-1 space-y-6">
                <!-- Quick Stats -->
                <!-- Quick Stats -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg p-6 border border-white/20">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-chart-line text-blue-500 mr-2"></i>
                        Quick Stats
                    </h3>
                    <div class="space-y-4">
                        <div class="flex items-center justify-between p-3 bg-blue-50 rounded-xl">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-film text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-600">Active Rentals</p>
                                    <p class="text-xl font-bold text-gray-900">@Model.ActiveRentals</p>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-green-50 rounded-xl">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-star text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-600">Reviews</p>
                                    <p class="text-xl font-bold text-gray-900">@Model.TotalReviews</p>
                                </div>
                            </div>
                        </div>

                        <div class="flex items-center justify-between p-3 bg-purple-50 rounded-xl">
                            <div class="flex items-center space-x-3">
                                <div class="w-10 h-10 bg-purple-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-clock text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-600">Due Soon</p>
                                    <p class="text-xl font-bold text-gray-900">@Model.DueSoonRentals</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Profile Card -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg p-6 border border-white/20">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-user-circle text-purple-500 mr-2"></i>
                        Profile
                    </h3>
                    <div class="space-y-3">
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-xl">
                            <i class="fas fa-user text-gray-400"></i>
                            <div>
                                <p class="text-sm text-gray-600">Name</p>
                                <p class="font-semibold text-gray-900">@Context.Session.GetString("UserName")</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-xl">
                            <i class="fas fa-envelope text-gray-400"></i>
                            <div>
                                <p class="text-sm text-gray-600">Email</p>
                                <p class="font-semibold text-gray-900">@Context.Session.GetString("UserEmail")</p>
                            </div>
                        </div>
                        <div class="flex items-center space-x-3 p-3 bg-gray-50 rounded-xl">
                            <i class="fas fa-shield-alt text-gray-400"></i>
                            <div>
                                <p class="text-sm text-gray-600">Role</p>
                                <p class="font-semibold text-gray-900">@Context.Session.GetString("UserRole")</p>
                            </div>
                        </div>
                    </div>
                    <a href="@Url.Action("EditProfile", "Account")"
                       class="w-full mt-4 bg-gray-100 text-gray-700 py-2.5 rounded-xl hover:bg-gray-200 transition-all duration-200 flex items-center justify-center space-x-2">
                        <i class="fas fa-edit"></i>
                        <span>Edit Profile</span>
                    </a>
                </div>
            </div>

            <!-- Main Content -->
            <div class="lg:col-span-3 space-y-8">
                <!-- Quick Actions -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg p-6 border border-white/20">
                    <h3 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
                        <i class="fas fa-bolt text-yellow-500 mr-3"></i>
                        Quick Actions
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                        <a href="@Url.Action("Index", "MyMovies")"
                           class="group p-4 bg-gradient-to-br from-blue-500 to-blue-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                            <div class="text-white text-center">
                                <i class="fas fa-film text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                                <h4 class="font-semibold">Browse Movies</h4>
                                <p class="text-blue-100 text-sm mt-1">Discover new films</p>
                            </div>
                        </a>

                        <a href="@Url.Action("Index", "MyRentals")"
                           class="group p-4 bg-gradient-to-br from-green-500 to-green-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                            <div class="text-white text-center">
                                <i class="fas fa-play-circle text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                                <h4 class="font-semibold">My Rentals</h4>
                                <p class="text-green-100 text-sm mt-1">Manage rentals</p>
                            </div>
                        </a>

                        

                        <a href="@Url.Action("Index", "Cart")"
                           class="group p-4 bg-gradient-to-br from-orange-500 to-orange-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                            <div class="text-white text-center">
                                <i class="fas fa-shopping-cart text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                                <h4 class="font-semibold">My Cart</h4>
                                <p class="text-orange-100 text-sm mt-1">@Model.CartItemsCount items</p>
                            </div>
                        </a>

                        <a href="@Url.Action("SearchApi", "MyMovies")"
                           class="group p-4 bg-gradient-to-br from-pink-500 to-pink-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                            <div class="text-white text-center">
                                <i class="fas fa-search text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                                <h4 class="font-semibold">Movie Search</h4>
                                <p class="text-pink-100 text-sm mt-1">Find movies</p>
                            </div>
                        </a>

                        <a href="@Url.Action("EditProfile", "Account")"
                           class="group p-4 bg-gradient-to-br from-indigo-500 to-indigo-600 rounded-xl shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300">
                            <div class="text-white text-center">
                                <i class="fas fa-cog text-2xl mb-2 group-hover:scale-110 transition-transform"></i>
                                <h4 class="font-semibold">Settings</h4>
                                <p class="text-indigo-100 text-sm mt-1">Account settings</p>
                            </div>
                        </a>
                    </div>
                </div>

                <!-- Recent Activity & Charts -->
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Recent Activity -->
                    <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg p-6 border border-white/20">
                        <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                            <i class="fas fa-history text-green-500 mr-2"></i>
                            Recent Activity
                        </h3>
                        <div class="space-y-4">
                            @if (Model.RecentActivities.Any())
                            {
                                @foreach (var activity in Model.RecentActivities)
                                {
                                    <div class="flex items-center space-x-3 p-3 bg-green-50 rounded-xl">
                                        <div class="w-8 h-8 bg-green-500 rounded-full flex items-center justify-center">
                                            <i class="fas fa-play text-white text-sm"></i>
                                        </div>
                                        <div class="flex-1">
                                            <p class="font-medium text-gray-900">@activity.Type: @activity.Title</p>
                                            <p class="text-sm text-gray-600">@activity.Date.ToString("MMM dd, yyyy")</p>
                                        </div>
                                        <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">@activity.Status</span>
                                    </div>
                                }
                            }
                            else
                            {
                                <p class="text-gray-500 text-center py-4">No recent activity</p>
                            }
                        </div>
                    </div>

                   
                </div>

                <!-- Upcoming Due Dates -->
                <!-- Upcoming Due Dates -->
                <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-lg p-6 border border-white/20">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                        <i class="fas fa-calendar-alt text-red-500 mr-2"></i>
                        Due Soon
                    </h3>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        @if (Model.DueSoonDetails.Any())
                        {
                            @foreach (var dueItem in Model.DueSoonDetails)
                            {
                                var bgColor = dueItem.DaysUntilDue <= 1 ? "bg-red-50 border-red-200" : "bg-yellow-50 border-yellow-200";
                                var badgeColor = dueItem.DaysUntilDue <= 1 ? "bg-red-500" : "bg-yellow-500";
                                var badgeText = dueItem.DaysUntilDue <= 1 ? "Urgent" : "Warning";

                                <div class="p-4 @bgColor border rounded-xl">
                                    <div class="flex items-center justify-between">
                                        <div>
                                            <h4 class="font-semibold text-gray-900">@dueItem.MovieTitle</h4>
                                            <p class="text-sm text-gray-600">Due @dueItem.DueDate.ToString("MMM dd, yyyy")</p>
                                        </div>
                                        <span class="@badgeColor text-white px-3 py-1 rounded-full text-sm font-semibold">@badgeText</span>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-gray-500 text-center col-span-2 py-4">No rentals due soon</p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </main>
</body>
</html>