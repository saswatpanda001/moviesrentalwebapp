@model MoviesRental.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 to-white py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div class="text-center">
            <h2 class="text-4xl font-extrabold text-gray-900 mb-2">Sign in</h2>
            <p class="text-gray-500">to your Movie Rental account</p>
        </div>

        <div class="bg-white py-8 px-6 shadow-lg rounded-2xl border border-gray-200">
            <form class="space-y-6" asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-red-600 text-sm mb-2"></div>

                <div class="space-y-4">
                    <div>
                        <label asp-for="Email" class="block text-sm font-medium text-gray-700">Email address</label>
                        <input asp-for="Email" type="email" autocomplete="email" required
                               class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 text-gray-900 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                               placeholder="you@example.com">
                        <span asp-validation-for="Email" class="text-red-600 text-xs mt-1 block"></span>
                    </div>

                    <div>
                        <label asp-for="Password" class="block text-sm font-medium text-gray-700">Password</label>
                        <input asp-for="Password" type="password" autocomplete="current-password" required
                               class="mt-1 block w-full px-4 py-2 border border-gray-300 rounded-lg shadow-sm placeholder-gray-400 text-gray-900 focus:ring-blue-500 focus:border-blue-500 sm:text-sm"
                               placeholder="********">
                        <span asp-validation-for="Password" class="text-red-600 text-xs mt-1 block"></span>
                    </div>
                </div>

                <div>
                    <button type="submit"
                            class="w-full py-2 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-all">
                        Sign in
                    </button>
                </div>

                <div class="text-center mt-4">
                    <p class="text-sm text-gray-500">
                        Demo Accounts:<br>
                        <span class="font-medium">Admin:</span> admin@movierental.com / admin123<br>
                        <span class="font-medium">User:</span> user@movierental.com / user123
                    </p>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

