
@{
    ViewData["Title"] = "MovieRental - Your Ultimate Movie Experience";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#2563eb',
                        secondary: '#64748b',
                        accent: '#f59e0b',
                        dark: '#1e293b',
                        light: '#f8fafc'
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gray-50 font-sans">
    <!-- Navigation -->
  

    <!-- Hero Section -->
    <section id="home" class="bg-gradient-to-br from-blue-600 via-purple-600 to-blue-800 text-white">
        <div class="max-w-7xl mx-auto px-4 py-20">
            <div class="grid md:grid-cols-2 gap-12 items-center">
                <div>
                    <h1 class="text-5xl md:text-6xl font-bold leading-tight mb-6">
                        Your Ultimate
                        <span class="text-yellow-400">Movie</span>
                        Experience
                    </h1>
                    <p class="text-xl text-blue-100 mb-8 leading-relaxed">
                        Discover thousands of movies from classics to latest releases. Rent, watch, and enjoy cinema like never before with our premium collection.
                    </p>
                    <div class="flex flex-wrap gap-4">
                        <button class="bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-300 transition transform hover:-translate-y-1">
                            <i class="fas fa-play mr-2"></i>Start Watching
                        </button>
                        <button class="border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white hover:text-blue-600 transition">
                            Browse Movies
                        </button>
                    </div>
                </div>
                <div class="relative">
                    <div class="grid grid-cols-2 gap-4">
                        <div class="space-y-4">
                            <div class="bg-red-500 rounded-xl shadow-2xl h-48 transform rotate-3 hover:rotate-0 transition"></div>
                            <div class="bg-blue-500 rounded-xl shadow-2xl h-48 transform -rotate-3 hover:rotate-0 transition"></div>
                        </div>
                        <div class="space-y-4 mt-8">
                            <div class="bg-green-500 rounded-xl shadow-2xl h-48 transform -rotate-2 hover:rotate-0 transition"></div>
                            <div class="bg-purple-500 rounded-xl shadow-2xl h-48 transform rotate-2 hover:rotate-0 transition"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Stats Section -->
    <section id="stats" class="py-16 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
                <div class="text-center">
                    <div class="text-4xl font-bold text-primary mb-2">10K+</div>
                    <div class="text-gray-600">Movies Available</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-primary mb-2">50K+</div>
                    <div class="text-gray-600">Happy Customers</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-primary mb-2">24/7</div>
                    <div class="text-gray-600">Support</div>
                </div>
                <div class="text-center">
                    <div class="text-4xl font-bold text-primary mb-2">99%</div>
                    <div class="text-gray-600">Satisfaction Rate</div>
                </div>
            </div>
        </div>
    </section>

    <!-- Features Section -->
    <section id="features" class="py-20 bg-gray-50">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-4xl font-bold text-center text-gray-800 mb-4">Why Choose MovieRental?</h2>
            <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
                We provide the best movie rental experience with features designed for true cinema lovers
            </p>

            <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Feature 1 -->
                <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition group">
                    <div class="w-16 h-16 bg-blue-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-blue-200 transition">
                        <i class="fas fa-film text-2xl text-primary"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">Vast Collection</h3>
                    <p class="text-gray-600">From timeless classics to latest blockbusters, we have something for every movie enthusiast.</p>
                </div>

                <!-- Feature 2 -->
                <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition group">
                    <div class="w-16 h-16 bg-green-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-green-200 transition">
                        <i class="fas fa-tag text-2xl text-green-600"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">Affordable Prices</h3>
                    <p class="text-gray-600">Premium movie rentals at prices that won't break the bank. Quality entertainment for everyone.</p>
                </div>

                <!-- Feature 3 -->
                <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition group">
                    <div class="w-16 h-16 bg-purple-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-purple-200 transition">
                        <i class="fas fa-bolt text-2xl text-purple-600"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">Instant Access</h3>
                    <p class="text-gray-600">Rent and start watching immediately. No long waits, no complicated processes.</p>
                </div>

                <!-- Feature 4 -->
                <div class="bg-white p-8 rounded-2xl shadow-lg hover:shadow-xl transition group">
                    <div class="w-16 h-16 bg-red-100 rounded-2xl flex items-center justify-center mb-6 group-hover:bg-red-200 transition">
                        <i class="fas fa-hd-video text-2xl text-red-600"></i>
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-4">HD Quality</h3>
                    <p class="text-gray-600">Experience movies in stunning high definition with crystal clear audio and video quality.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- How It Works -->
    <section id="how-it-works" class="py-20 bg-white">
        <div class="max-w-7xl mx-auto px-4">
            <h2 class="text-4xl font-bold text-center text-gray-800 mb-4">How It Works</h2>
            <p class="text-xl text-gray-600 text-center mb-12 max-w-3xl mx-auto">
                Get started in just 4 simple steps and begin your movie journey
            </p>

            <div class="grid md:grid-cols-4 gap-8">
                <!-- Step 1 -->
                <div class="text-center group">
                    <div class="w-20 h-20 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6 group-hover:scale-110 transition">
                        1
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Sign Up</h3>
                    <p class="text-gray-600">Create your free account in seconds</p>
                </div>

                <!-- Step 2 -->
                <div class="text-center group">
                    <div class="w-20 h-20 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6 group-hover:scale-110 transition">
                        2
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Browse & Choose</h3>
                    <p class="text-gray-600">Explore our extensive movie collection</p>
                </div>

                <!-- Step 3 -->
                <div class="text-center group">
                    <div class="w-20 h-20 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6 group-hover:scale-110 transition">
                        3
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Rent & Watch</h3>
                    <p class="text-gray-600">Rent your movie and start watching instantly</p>
                </div>

                <!-- Step 4 -->
                <div class="text-center group">
                    <div class="w-20 h-20 bg-primary text-white rounded-full flex items-center justify-center text-2xl font-bold mx-auto mb-6 group-hover:scale-110 transition">
                        4
                    </div>
                    <h3 class="text-xl font-bold text-gray-800 mb-3">Enjoy</h3>
                    <p class="text-gray-600">Sit back, relax, and enjoy the show</p>
                </div>
            </div>
        </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-gradient-to-r from-blue-600 to-purple-700 text-white">
        <div class="max-w-4xl mx-auto text-center px-4">
            <h2 class="text-4xl md:text-5xl font-bold mb-6">Ready to Start Your Movie Journey?</h2>
            <p class="text-xl text-blue-100 mb-8 max-w-2xl mx-auto">
                Join thousands of movie lovers who trust us for their entertainment needs. Start exploring today!
            </p>
            <div class="flex flex-wrap justify-center gap-4">
                <button class="bg-yellow-400 text-gray-900 px-8 py-4 rounded-lg font-bold text-lg hover:bg-yellow-300 transition transform hover:-translate-y-1">
                    <i class="fas fa-rocket mr-2"></i>Get Started Free
                </button>
                <button class="border-2 border-white text-white px-8 py-4 rounded-lg font-bold text-lg hover:bg-white hover:text-blue-600 transition">
                    Browse Collection
                </button>
            </div>
        </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid md:grid-cols-4 gap-8">
                <div>
                    <div class="flex items-center mb-4">
                        <i class="fas fa-film text-2xl text-primary mr-2"></i>
                        <span class="text-xl font-bold">MovieRental</span>
                    </div>
                    <p class="text-gray-400">Your ultimate destination for premium movie rentals and unforgettable cinematic experiences.</p>
                </div>
                <div>
                    <h4 class="font-bold text-lg mb-4">Quick Links</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#home" class="hover:text-white transition">Home</a></li>
                        <li><a href="#features" class="hover:text-white transition">Features</a></li>
                        <li><a href="#how-it-works" class="hover:text-white transition">How It Works</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-bold text-lg mb-4">Support</h4>
                    <ul class="space-y-2 text-gray-400">
                        <li><a href="#" class="hover:text-white transition">Help Center</a></li>
                        <li><a href="#" class="hover:text-white transition">Contact Us</a></li>
                        <li><a href="#" class="hover:text-white transition">FAQ</a></li>
                    </ul>
                </div>
                <div>
                    <h4 class="font-bold text-lg mb-4">Connect</h4>
                    <div class="flex space-x-4">
                        <a href="#" class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="w-10 h-10 bg-gray-700 rounded-full flex items-center justify-center hover:bg-primary transition">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="border-t border-gray-700 mt-8 pt-8 text-center text-gray-400">
                <p>&copy; 2024 MovieRental. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <!-- Smooth scroll script -->
    <script>
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>