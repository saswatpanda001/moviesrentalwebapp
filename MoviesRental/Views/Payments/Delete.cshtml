@model MoviesRental.Models.Payment

@{
    ViewData["Title"] = "Delete Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto bg-white shadow-lg rounded-xl p-8 mt-10 border border-gray-200">
    <h1 class="text-3xl font-semibold text-red-600 mb-4">Delete Payment</h1>
    <p class="text-gray-700 mb-6">Are you sure you want to delete this payment? This action cannot be undone.</p>

    <div class="bg-gray-50 rounded-lg p-6 border border-gray-200 mb-6">
        <h2 class="text-xl font-bold text-gray-800 mb-4">Payment Details</h2>
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-x-6 gap-y-4">
            <div>
                <dt class="text-sm font-medium text-gray-500">Amount</dt>
                <dd class="text-lg text-gray-900 font-semibold">@Html.DisplayFor(model => model.Amount)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Payment Method</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.PaymentMethod)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Status</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.Status)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Paid On</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.PaidOn)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">Rental ID</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.Rental.RentalId)</dd>
            </div>
            <div>
                <dt class="text-sm font-medium text-gray-500">User ID</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.User.UserId)</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" class="flex items-center space-x-4">
        <input type="hidden" asp-for="PaymentId" />

        <button type="submit" class="px-6 py-2.5 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition">
            Delete
        </button>

        <a asp-action="Index" class="px-6 py-2.5 bg-gray-200 text-gray-800 rounded-lg shadow hover:bg-gray-300 transition">
            Back to List
        </a>
    </form>
</div>