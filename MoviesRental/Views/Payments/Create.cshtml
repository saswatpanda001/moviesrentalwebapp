@model MoviesRental.Models.Payment

@{
    ViewData["Title"] = "Create Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">

    <h1 class="text-3xl font-bold text-gray-800 mb-2">Create Payment</h1>
    <p class="text-gray-600 mb-6">Fill in the details to add a new payment.</p>

    <form asp-action="Create" class="space-y-6">

        <div asp-validation-summary="ModelOnly" class="text-red-600"></div>

        <!-- Rental -->
        <div>
            <label asp-for="RentalId" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="RentalId" asp-items="ViewBag.RentalId"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
            </select>
        </div>

        <!-- User -->
        <div>
            <label asp-for="UserId" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <select asp-for="UserId" asp-items="ViewBag.UserId"
                    class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
            </select>
        </div>

        <!-- Amount -->
        <div>
            <label asp-for="Amount" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="Amount"
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
            <span asp-validation-for="Amount" class="text-red-600 text-sm"></span>
        </div>

        <!-- Payment Method -->
        <div>
            <label asp-for="PaymentMethod" class="block text-sm font-medium text-gray-700 mb-1"></label>
            <input asp-for="PaymentMethod"
                   class="w-full p-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition" />
            <span asp-validation-for="PaymentMethod" class="text-red-600 text-sm"></span>
        </div>

        <!-- Submit Button -->
        <div>
            <button type="submit"
                    class="w-full py-3 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 transition font-medium">
                Create Payment
            </button>
        </div>

    </form>

    <!-- Back Link -->
    <div class="mt-6 text-center">
        <a asp-action="Index"
           class="text-gray-700 hover:text-gray-900 font-medium transition">
            ← Back to List
        </a>
    </div>

</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
