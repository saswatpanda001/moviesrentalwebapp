@model MoviesRental.Models.Payment

@{
    ViewData["Title"] = "Payment Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-2xl p-8 border border-gray-200">

    <h1 class="text-3xl font-bold text-gray-800 mb-6">Payment Details</h1>

    <div class="space-y-4">
        <div class="flex justify-between border-b pb-3">
            <span class="font-semibold text-gray-600">Amount:</span>
            <span class="text-gray-800">@Model.Amount</span>
        </div>

        <div class="flex justify-between border-b pb-3">
            <span class="font-semibold text-gray-600">Payment Method:</span>
            <span class="text-gray-800">@Model.PaymentMethod</span>
        </div>

        <div class="flex justify-between border-b pb-3">
            <span class="font-semibold text-gray-600">Status:</span>
            <span class="text-gray-800">@Model.Status</span>
        </div>

        <div class="flex justify-between border-b pb-3">
            <span class="font-semibold text-gray-600">Paid On:</span>
            <span class="text-gray-800">@Model.PaidOn</span>
        </div>

        <div class="flex justify-between border-b pb-3">
            <span class="font-semibold text-gray-600">Rental ID:</span>
            <span class="text-gray-800">@Model.Rental.RentalId</span>
        </div>

        <div class="flex justify-between border-b pb-1">
            <span class="font-semibold text-gray-600">User ID:</span>
            <span class="text-gray-800">@Model.User.UserId</span>
        </div>
    </div>

    <div class="mt-8 flex gap-4">
       

        <a asp-action="Index" class="px-5 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 rounded-lg shadow">
            Back to List
        </a>
    </div>
</div>
