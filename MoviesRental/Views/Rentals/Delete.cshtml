@model MoviesRental.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">

    <h1 class="text-3xl font-bold text-gray-800 mb-4">Delete Rental</h1>

    <div class="bg-red-50 border border-red-200 text-red-800 px-4 py-3 rounded-lg mb-6">
        <h3 class="font-semibold text-lg">Are you sure you want to delete this rental?</h3>
        <p class="text-sm">This action cannot be undone.</p>
    </div>

    <div class="space-y-4">
        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">Rented On:</p>
            <p class="text-gray-800">@Model.RentedOn</p>
        </div>

        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">Due Date:</p>
            <p class="text-gray-800">@Model.DueDate</p>
        </div>

        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">Returned On:</p>
            <p class="text-gray-800">@Model.ReturnedOn</p>
        </div>

        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">Price:</p>
            <p class="text-gray-800">@Model.Price</p>
        </div>

        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">Movie ID:</p>
            <p class="text-gray-800">@Model.Movie.MovieId</p>
        </div>

        <div class="border-b pb-4">
            <p class="font-semibold text-gray-700">User ID:</p>
            <p class="text-gray-800">@Model.User.UserId</p>
        </div>
    </div>

    <form asp-action="Delete" class="mt-8 flex items-center gap-4">
        <input type="hidden" asp-for="RentalId" />

        <button type="submit"
                class="px-6 py-2 bg-red-600 text-white rounded-lg shadow hover:bg-red-700 transition">
            Yes, Delete
        </button>

        <a asp-action="Index"
           class="px-6 py-2 bg-gray-200 text-gray-800 rounded-lg hover:bg-gray-300 transition">
            Cancel
        </a>
    </form>

</div>
