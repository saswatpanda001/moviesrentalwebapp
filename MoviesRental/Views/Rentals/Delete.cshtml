@model MoviesRental.Models.Rental

@{
    ViewData["Title"] = "Delete Rental";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-12 bg-white shadow-xl rounded-2xl p-10 border border-gray-100">

    <h1 class="text-3xl font-extrabold text-gray-900 mb-6 tracking-tight">
        Delete Rental
    </h1>

    <!-- Warning Box -->
    <div class="bg-red-100 border border-red-300 text-red-900 px-5 py-4 rounded-xl mb-8 flex items-start gap-3">
        <svg class="w-6 h-6 mt-1" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd"
                  d="M8.257 3.099c.765-1.36 2.72-1.36 3.485 0l6.518 11.6c.75 1.336-.213 2.992-1.742 2.992H3.48c-1.53 0-2.493-1.656-1.743-2.992l6.52-11.6zM11 14a1 1 0 10-2 0 1 1 0 002 0zm-1-8a1 1 0 00-.993.883L9 7v4a1 1 0 001.993.117L11 11V7a1 1 0 00-1-1z"
                  clip-rule="evenodd" />
        </svg>

        <div>
            <h3 class="font-bold text-lg">Are you sure you want to delete this rental?</h3>
            <p class="text-sm opacity-90">This action is permanent and cannot be undone.</p>
        </div>
    </div>

    <!-- Rental Details -->
    <div class="space-y-5">
        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">Rented On:</span>
            <p class="text-gray-900 mt-1">@Model.RentedOn</p>
        </div>

        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">Due Date:</span>
            <p class="text-gray-900 mt-1">@Model.DueDate</p>
        </div>

        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">Returned On:</span>
            <p class="text-gray-900 mt-1">@Model.ReturnedOn</p>
        </div>

        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">Price:</span>
            <p class="text-gray-900 mt-1">@Model.Price</p>
        </div>

        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">Movie ID:</span>
            <p class="text-gray-900 mt-1">@Model.Movie.MovieId</p>
        </div>

        <div class="pb-4 border-b">
            <span class="font-semibold text-gray-600">User ID:</span>
            <p class="text-gray-900 mt-1">@Model.User.UserId</p>
        </div>
    </div>

    <!-- Buttons -->
    <form asp-action="Delete" class="mt-10 flex items-center gap-4">
        <input type="hidden" asp-for="RentalId" />

        <button type="submit"
                class="px-6 py-2.5 bg-red-600 text-white text-sm font-semibold rounded-lg shadow hover:bg-red-700 hover:shadow-md transition">
            Yes, Delete
        </button>

        <a asp-action="Index"
           class="px-6 py-2.5 bg-gray-100 text-gray-800 text-sm font-semibold rounded-lg hover:bg-gray-200 transition">
            Cancel
        </a>
    </form>

</div>
