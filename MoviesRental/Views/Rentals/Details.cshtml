@model MoviesRental.Models.Rental

@{
    ViewData["Title"] = "Rental Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-4xl mx-auto mt-12">

    <h1 class="text-4xl font-extrabold text-gray-900 mb-8 tracking-tight">
        Rental Details
    </h1>

    <div class="bg-white shadow-xl rounded-2xl p-10 border border-gray-100">

        <!-- Section Header -->
        <div class="mb-6">
            <h4 class="text-2xl font-semibold text-gray-700">Rental Information</h4>
            <p class="text-gray-500 text-sm mt-1">Complete details of the selected rental</p>
        </div>

        <hr class="mb-8 border-gray-200">

        <!-- Details Grid -->
        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-6 gap-x-12">

            <div>
                <dt class="text-sm font-semibold text-gray-500">Rented On</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.RentedOn)</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Due Date</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.DueDate)</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Returned On</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.ReturnedOn)</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Price</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.Price)</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">Movie</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.Movie.Title)</dd>
            </div>

            <div>
                <dt class="text-sm font-semibold text-gray-500">User</dt>
                <dd class="text-lg text-gray-900 mt-1">@Html.DisplayFor(model => model.User.Email)</dd>
            </div>

        </dl>

    </div>

    <!-- Buttons -->
    <div class="flex items-center space-x-4 mt-8">
       
        <a asp-action="Index"
           class="px-5 py-2.5 bg-gray-200 text-gray-800 font-medium rounded-lg hover:bg-gray-300 transition">
            Back to List
        </a>
    </div>

</div>
