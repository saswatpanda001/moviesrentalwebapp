@model MoviesRental.Models.Rental

@{
    ViewData["Title"] = "Rental Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10">
    <h1 class="text-3xl font-bold mb-6 text-gray-800">Rental Details</h1>

    <div class="bg-white shadow-md rounded-xl p-6 border border-gray-200">
        <h4 class="text-xl font-semibold mb-4 text-gray-700">Rental Information</h4>
        <hr class="mb-6">

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-8">

            <div>
                <dt class="text-sm font-medium text-gray-500">Rented On</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.RentedOn)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Due Date</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.DueDate)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Returned On</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.ReturnedOn)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Price</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.Price)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">Movie</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.Movie.Title)</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-500">User</dt>
                <dd class="text-lg text-gray-900">@Html.DisplayFor(model => model.User.Email)</dd>
            </div>

        </dl>
    </div>

    <div class="flex items-center space-x-4 mt-6">
        <a asp-action="Edit" asp-route-id="@Model?.RentalId"
           class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition">
            Edit
        </a>

        <a asp-action="Index"
           class="px-4 py-2 bg-gray-300 text-gray-800 rounded-lg hover:bg-gray-400 transition">
            Back to List
        </a>
    </div>
</div>
