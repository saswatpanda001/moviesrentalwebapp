@model IEnumerable<MoviesRental.Models.Rental>

@{
    ViewData["Title"] = "Rentals";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-6xl mx-auto mt-12">

    <!-- Header -->
    <div class="flex justify-between items-center mb-8">
        <h1 class="text-4xl font-extrabold text-gray-900 tracking-tight">Rentals</h1>
    </div>

    <!-- Table Container -->
    <div class="overflow-x-auto bg-white shadow-xl rounded-2xl border border-gray-200">

        <table class="min-w-full text-left border-collapse">
            <thead class="bg-gray-100 text-gray-700 uppercase text-xs font-semibold tracking-wide">
                <tr>
                    <th class="px-6 py-3">Rented On</th>
                    <th class="px-6 py-3">Due Date</th>
                    <th class="px-6 py-3">Returned On</th>
                    <th class="px-6 py-3">Price</th>
                    <th class="px-6 py-3">Movie</th>
                    <th class="px-6 py-3">User</th>
                    <th class="px-6 py-3 text-center">Actions</th>
                </tr>
            </thead>

            <tbody class="text-gray-800 text-sm">
                @foreach (var item in Model)
                {
                    <tr class="border-t hover:bg-gray-50 transition">

                        <td class="px-6 py-4">@item.RentedOn</td>
                        <td class="px-6 py-4">@item.DueDate</td>

                        <!-- Returned Badge -->
                        <td class="px-6 py-4">
                            @if (item.ReturnedOn == null)
                            {
                                <span class="px-3 py-1 text-xs font-semibold bg-yellow-100 text-yellow-700 rounded-full">
                                    Not Returned
                                </span>
                            }
                            else
                            {
                                <span class="px-3 py-1 text-xs font-semibold bg-green-100 text-green-700 rounded-full">
                                    @item.ReturnedOn
                                </span>
                            }
                        </td>

                        <td class="px-6 py-4 font-medium text-gray-900">₹@item.Price</td>

                        <td class="px-6 py-4 font-semibold text-indigo-700">@item.Movie.Title</td>

                        <td class="px-6 py-4 text-gray-700">@item.User.Email</td>

                        <!-- Action Buttons -->
                        <td class="px-6 py-4 flex justify-center gap-4">

                            <a asp-action="Details" asp-route-id="@item.RentalId"
                               class="text-blue-600 hover:text-blue-800 font-semibold transition">
                                Details
                            </a>

                            <a asp-action="Delete" asp-route-id="@item.RentalId"
                               class="text-red-600 hover:text-red-800 font-semibold transition">
                                Delete
                            </a>

                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>

</div>
