<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MoviesRental</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body class="bg-gray-50">
    <!-- Modern Navbar -->
    <header class="sticky top-0 z-50">
        <nav class="bg-white/90 backdrop-blur-lg shadow-lg border-b border-gray-200/50">
            <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
                <div class="flex justify-between items-center h-16">
                    <!-- Logo -->
                    <div class="flex items-center space-x-3">
                        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-purple-600 rounded-xl flex items-center justify-center shadow-lg">
                            <i class="fas fa-film text-white text-lg"></i>
                        </div>
                        <a class="text-2xl font-bold bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent"
                           asp-area="" asp-controller="Home" asp-action="Index">
                            MoviesRental
                        </a>
                    </div>

                    <!-- Desktop Menu -->
                    <div class="hidden lg:flex items-center space-x-1">
                        @if (MoviesRental.Controllers.SessionManager.IsLoggedIn && MoviesRental.Controllers.SessionManager.UserRole == "User")
                        {
                            <!-- User Menu -->
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="Account" asp-action="UserDashboard">
                                <i class="fas fa-tachometer-alt text-blue-500"></i>
                                <span>Dashboard</span>
                            </a>
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="MyMovies" asp-action="Index">
                                <i class="fas fa-compass text-green-500"></i>
                                <span>Browse Movies</span>
                            </a>
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="MyRentals" asp-action="Index">
                                <i class="fas fa-play-circle text-purple-500"></i>
                                <span>My Rentals</span>
                            </a>
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1 relative"
                               asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart text-orange-500"></i>
                                <span>Cart</span>
                                <span class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center cart-count">0</span>
                            </a>
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="MyMovies" asp-action="SearchAPI">
                                <i class="fas fa-search text-pink-500"></i>
                                <span>Discover</span>
                            </a>

                            <!-- User Dropdown -->
                            <div class="relative group ml-2">
                                <button class="flex items-center space-x-3 bg-gradient-to-r from-blue-500 to-purple-600 text-white px-4 py-2 rounded-xl font-medium shadow-lg hover:shadow-xl transition-all duration-200">
                                    <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                                        <i class="fas fa-user text-white"></i>
                                    </div>
                                    <span>@MoviesRental.Controllers.SessionManager.UserName</span>
                                    <i class="fas fa-chevron-down text-sm transition-transform group-hover:rotate-180"></i>
                                </button>

                                <!-- Dropdown Menu -->
                                <div class="absolute right-0 mt-2 w-56 bg-white rounded-2xl shadow-2xl border border-gray-200/50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
                                    <div class="p-4 border-b border-gray-100">
                                        <p class="font-semibold text-gray-900">@MoviesRental.Controllers.SessionManager.UserName</p>
                                     
                                    </div>
                                    <div class="p-2">
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-blue-50 hover:text-blue-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Account" asp-action="ResetPassword">
                                            <i class="fas fa-key text-blue-500 w-5"></i>
                                            <span>Change Password</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors"
                                           href="/Account/Logout">
                                            <i class="fas fa-sign-out-alt text-red-500 w-5"></i>
                                            <span>Logout</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else if (MoviesRental.Controllers.SessionManager.IsLoggedIn && MoviesRental.Controllers.SessionManager.UserRole == "Admin")
                        {
                            <!-- Admin Menu -->
                            <a class="nav-item bg-white/50 hover:bg-purple-50 text-gray-700 hover:text-purple-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="Account" asp-action="AdminDashboard">
                                <i class="fas fa-tachometer-alt text-purple-500"></i>
                                <span>Admin Dashboard</span>
                            </a>

                            <!-- Admin Dropdown -->
                            <div class="relative group">
                                <button class="flex items-center space-x-2 bg-white/50 hover:bg-purple-50 text-gray-700 hover:text-purple-600 px-4 py-2 rounded-xl font-medium transition-all duration-200">
                                    <i class="fas fa-cog text-purple-500"></i>
                                    <span>Manage</span>
                                    <i class="fas fa-chevron-down text-sm transition-transform group-hover:rotate-180"></i>
                                </button>

                                <div class="absolute left-0 mt-2 w-64 bg-white rounded-2xl shadow-2xl border border-gray-200/50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0 z-50">
                                    <div class="p-4 border-b border-gray-100">
                                        <p class="font-semibold text-gray-900">Admin Controls</p>
                                        <p class="text-sm text-gray-500">Management Panel</p>
                                    </div>
                                    <div class="p-2 grid gap-1">
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Movies" asp-action="Index">
                                            <i class="fas fa-film text-purple-500 w-5"></i>
                                            <span>Manage Movies</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Users" asp-action="Index">
                                            <i class="fas fa-users text-purple-500 w-5"></i>
                                            <span>Manage Users</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Rentals" asp-action="Index">
                                            <i class="fas fa-play-circle text-purple-500 w-5"></i>
                                            <span>Manage Rentals</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Reviews" asp-action="Index">
                                            <i class="fas fa-star text-purple-500 w-5"></i>
                                            <span>Manage Reviews</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Payments" asp-action="Index">
                                            <i class="fas fa-credit-card text-purple-500 w-5"></i>
                                            <span>Manage Payments</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Reviews" asp-action="BulkDelete">
                                            <i class="fas fa-trash text-purple-500 w-5"></i>
                                            <span>Bulk Delete Reviews</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Reports" asp-action="Index">
                                            <i class="fas fa-chart-bar text-purple-500 w-5"></i>
                                            <span>Generate Reports</span>
                                        </a>
                                    </div>
                                </div>
                            </div>

                            <!-- Admin User Dropdown -->
                            <div class="relative group ml-2">
                                <button class="flex items-center space-x-3 bg-gradient-to-r from-purple-500 to-pink-600 text-white px-4 py-2 rounded-xl font-medium shadow-lg hover:shadow-xl transition-all duration-200">
                                    <div class="w-8 h-8 bg-white/20 rounded-full flex items-center justify-center">
                                        <i class="fas fa-crown text-white"></i>
                                    </div>
                                    <span>@MoviesRental.Controllers.SessionManager.UserName</span>
                                    <i class="fas fa-chevron-down text-sm transition-transform group-hover:rotate-180"></i>
                                </button>

                                <div class="absolute right-0 mt-2 w-56 bg-white rounded-2xl shadow-2xl border border-gray-200/50 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 transform translate-y-2 group-hover:translate-y-0">
                                    <div class="p-4 border-b border-gray-100">
                                        <p class="font-semibold text-gray-900">@MoviesRental.Controllers.SessionManager.UserName</p>
                                        <p class="text-sm text-gray-500 flex items-center">
                                            <i class="fas fa-shield-alt text-purple-500 mr-1"></i>
                                            Administrator
                                        </p>
                                    </div>
                                    <div class="p-2">
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-purple-50 hover:text-purple-600 rounded-lg transition-colors"
                                           asp-area="" asp-controller="Account" asp-action="ResetPassword">
                                            <i class="fas fa-key text-purple-500 w-5"></i>
                                            <span>Change Password</span>
                                        </a>
                                        <a class="flex items-center space-x-3 px-3 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600 rounded-lg transition-colors"
                                           href="/Account/Logout">
                                            <i class="fas fa-sign-out-alt text-red-500 w-5"></i>
                                            <span>Logout</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <!-- Guest Menu -->
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home text-blue-500"></i>
                                <span>Home</span>
                            </a>
                            <a class="nav-item bg-white/50 hover:bg-blue-50 text-gray-700 hover:text-blue-600 px-4 py-2 rounded-xl font-medium transition-all duration-200 flex items-center space-x-2 mx-1"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt text-green-500"></i>
                                <span>Privacy</span>
                            </a>

                            <!-- Auth Buttons -->
                            <div class="flex items-center space-x-2 ml-4">
                                <a class="bg-gradient-to-r from-blue-500 to-blue-600 text-white px-6 py-2 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-200 flex items-center space-x-2"
                                   asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i>
                                    <span>User Login</span>
                                </a>
                                <a class="bg-gradient-to-r from-purple-500 to-purple-600 text-white px-6 py-2 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-200 flex items-center space-x-2"
                                   asp-area="" asp-controller="Account" asp-action="AdminLogin">
                                    <i class="fas fa-user-shield"></i>
                                    <span>Admin Login</span>
                                </a>
                                <a class="bg-gradient-to-r from-green-500 to-green-600 text-white px-6 py-2 rounded-xl font-semibold shadow-lg hover:shadow-xl transition-all duration-200 flex items-center space-x-2"
                                   asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i>
                                    <span>Sign Up</span>
                                </a>
                            </div>
                        }
                    </div>

                    <!-- Mobile menu button -->
                    <div class="lg:hidden">
                        <button type="button" class="bg-gray-100 p-2 rounded-xl text-gray-600 hover:text-gray-900 hover:bg-gray-200 transition-colors"
                                onclick="toggleMobileMenu()">
                            <i class="fas fa-bars text-lg"></i>
                        </button>
                    </div>
                </div>

                <!-- Mobile Menu -->
                <div id="mobileMenu" class="lg:hidden hidden bg-white rounded-2xl shadow-2xl border border-gray-200/50 mt-2 p-4">
                    @if (MoviesRental.Controllers.SessionManager.IsLoggedIn && MoviesRental.Controllers.SessionManager.UserRole == "User")
                    {
                        <div class="space-y-2">
                            <a class="flex items-center space-x-3 px-4 py-3 bg-blue-50 text-blue-600 rounded-xl font-medium"
                               asp-area="" asp-controller="Account" asp-action="UserDashboard">
                                <i class="fas fa-tachometer-alt w-5"></i>
                                <span>Dashboard</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="MyMovies" asp-action="Index">
                                <i class="fas fa-compass w-5"></i>
                                <span>Browse Movies</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="MyRentals" asp-action="Index">
                                <i class="fas fa-play-circle w-5"></i>
                                <span>My Rentals</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors relative"
                               asp-area="" asp-controller="Cart" asp-action="Index">
                                <i class="fas fa-shopping-cart w-5"></i>
                                <span>Cart</span>
                                <span class="absolute top-2 right-4 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">0</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="MyMovies" asp-action="SearchAPI">
                                <i class="fas fa-search w-5"></i>
                                <span>Discover Movies</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Account" asp-action="ResetPassword">
                                <i class="fas fa-key w-5"></i>
                                <span>Change Password</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-xl transition-colors"
                               href="/Account/Logout">
                                <i class="fas fa-sign-out-alt w-5"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    }
                    else if (MoviesRental.Controllers.SessionManager.IsLoggedIn && MoviesRental.Controllers.SessionManager.UserRole == "Admin")
                    {
                        <div class="space-y-2">
                            <a class="flex items-center space-x-3 px-4 py-3 bg-purple-50 text-purple-600 rounded-xl font-medium"
                               asp-area="" asp-controller="Account" asp-action="AdminDashboard">
                                <i class="fas fa-tachometer-alt w-5"></i>
                                <span>Admin Dashboard</span>
                            </a>
                            <div class="text-xs font-semibold text-gray-500 px-4 py-2">MANAGEMENT</div>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Movies" asp-action="Index">
                                <i class="fas fa-film w-5"></i>
                                <span>Manage Movies</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Users" asp-action="Index">
                                <i class="fas fa-users w-5"></i>
                                <span>Manage Users</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Rentals" asp-action="Index">
                                <i class="fas fa-play-circle w-5"></i>
                                <span>Manage Rentals</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Account" asp-action="ResetPassword">
                                <i class="fas fa-key w-5"></i>
                                <span>Change Password</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-red-600 hover:bg-red-50 rounded-xl transition-colors"
                               href="/Account/Logout">
                                <i class="fas fa-sign-out-alt w-5"></i>
                                <span>Logout</span>
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="space-y-2">
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fas fa-home w-5"></i>
                                <span>Home</span>
                            </a>
                            <a class="flex items-center space-x-3 px-4 py-3 text-gray-700 hover:bg-gray-50 rounded-xl transition-colors"
                               asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="fas fa-shield-alt w-5"></i>
                                <span>Privacy</span>
                            </a>
                            <div class="border-t border-gray-200 pt-4 mt-4">
                                <a class="flex items-center space-x-3 px-4 py-3 bg-blue-500 text-white rounded-xl font-medium mb-2"
                                   asp-area="" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt w-5"></i>
                                    <span>User Login</span>
                                </a>
                                <a class="flex items-center space-x-3 px-4 py-3 bg-purple-500 text-white rounded-xl font-medium mb-2"
                                   asp-area="" asp-controller="Account" asp-action="AdminLogin">
                                    <i class="fas fa-user-shield w-5"></i>
                                    <span>Admin Login</span>
                                </a>
                                <a class="flex items-center space-x-3 px-4 py-3 bg-green-500 text-white rounded-xl font-medium"
                                   asp-area="" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus w-5"></i>
                                    <span>Sign Up</span>
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>

    <div class="min-h-screen">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script>
        function toggleMobileMenu() {
            const mobileMenu = document.getElementById('mobileMenu');
            mobileMenu.classList.toggle('hidden');
        }

        // Close mobile menu when clicking outside
        document.addEventListener('click', function(event) {
            const mobileMenu = document.getElementById('mobileMenu');
            const mobileButton = document.querySelector('.lg:hidden button');

            if (!mobileMenu.contains(event.target) && !mobileButton.contains(event.target)) {
                mobileMenu.classList.add('hidden');
            }
        });

        function preventBack() {
            window.history.forward();
        }
        setTimeout("preventBack()", 0);
        window.onunload = function () { null };
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
