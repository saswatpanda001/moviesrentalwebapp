@model MoviesRental.Models.User

@{
    ViewData["Title"] = "User Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-gray-200">

    <h1 class="text-3xl font-bold text-gray-800 mb-2">User Details</h1>
    <p class="text-gray-600 mb-6">Here are the details for this user.</p>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-4 gap-x-6">

        <div>
            <p class="text-sm text-gray-500">Name</p>
            <p class="text-lg font-semibold text-gray-800">@Model.Name</p>
        </div>

        <div>
            <p class="text-sm text-gray-500">Password Hash</p>
            <p class="text-lg font-mono text-gray-800 break-all">@Model.PasswordHash</p>
        </div>

        <div>
            <p class="text-sm text-gray-500">Email</p>
            <p class="text-lg text-gray-800">@Model.Email</p>
        </div>

        <div>
            <p class="text-sm text-gray-500">Phone</p>
            <p class="text-lg text-gray-800">@Model.Phone</p>
        </div>

        <div>
            <p class="text-sm text-gray-500">Role</p>
            <span class="inline-block px-3 py-1 rounded-full text-sm font-medium
                         @(Model.Role == "Admin" ? "bg-purple-200 text-purple-800" : "bg-blue-200 text-blue-800")">
                @Model.Role
            </span>
        </div>

        <div>
            <p class="text-sm text-gray-500">Created At</p>
            <p class="text-lg text-gray-800">@Model.CreatedAt</p>
        </div>

    </div>

    <div class="mt-8 flex items-center gap-4">

        <a asp-action="Edit" asp-route-id="@Model?.UserId"
           class="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg shadow">
            Edit
        </a>

        <a asp-action="Index"
           class="text-indigo-600 hover:underline font-medium">
            Back to List
        </a>

    </div>

</div>
