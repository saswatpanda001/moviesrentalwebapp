@model MoviesRental.Models.User

@{
    ViewData["Title"] = "Delete User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="max-w-3xl mx-auto mt-10 bg-white shadow-lg rounded-xl p-8 border border-red-300">
    <h1 class="text-3xl font-bold text-red-600 mb-4">Delete User</h1>

    <p class="text-gray-700 mb-6 text-lg">
        Are you sure you want to delete this user? This action cannot be undone.
    </p>

    <div class="bg-red-50 border border-red-200 p-6 rounded-lg mb-6">
        <h4 class="text-xl font-semibold text-red-700 mb-4">User Details</h4>

        <dl class="grid grid-cols-1 sm:grid-cols-2 gap-y-4">
            <div>
                <dt class="text-sm font-medium text-gray-600">Name</dt>
                <dd class="text-base text-gray-900">@Model.Name</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-600">PasswordHash</dt>
                <dd class="text-base text-gray-900">@Model.PasswordHash</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-600">Email</dt>
                <dd class="text-base text-gray-900">@Model.Email</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-600">Phone</dt>
                <dd class="text-base text-gray-900">@Model.Phone</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-600">Role</dt>
                <dd class="text-base text-gray-900">@Model.Role</dd>
            </div>

            <div>
                <dt class="text-sm font-medium text-gray-600">Created At</dt>
                <dd class="text-base text-gray-900">@Model.CreatedAt</dd>
            </div>
        </dl>
    </div>

    <form asp-action="Delete" class="flex items-center space-x-4">
        <input type="hidden" asp-for="UserId" />

        <button type="submit"
                class="px-6 py-2 bg-red-600 hover:bg-red-700 text-white font-semibold rounded-lg shadow">
            Delete
        </button>

        <a asp-action="Index"
           class="px-6 py-2 bg-gray-200 hover:bg-gray-300 text-gray-800 font-semibold rounded-lg shadow">
            Cancel
        </a>
    </form>
</div>
