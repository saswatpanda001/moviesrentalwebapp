@model MoviesRental.Models.Rental
@{
    ViewData["Title"] = "Rental Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
</head>
<body class="bg-gradient-to-br from-gray-50 to-blue-50 min-h-screen">
    <div class="max-w-4xl mx-auto px-4 py-8">
        <!-- Back Button -->
        <a href="@Url.Action("Index")" class="inline-flex items-center text-blue-600 hover:text-blue-800 mb-6 transition-colors">
            <i class="fas fa-arrow-left mr-2"></i>
            <span>Back to My Rentals</span>
        </a>

        <!-- Main Card -->
        <div class="bg-white/80 backdrop-blur-lg rounded-2xl shadow-xl border border-white/20 overflow-hidden">
            <!-- Header -->
            <div class="bg-gradient-to-r from-blue-500 to-purple-600 p-8 text-white">
                <div class="flex justify-between items-start">
                    <div>
                        <h1 class="text-3xl font-bold mb-2">Rental Details</h1>
                        <p class="text-blue-100">Rental #@Model.RentalId</p>
                    </div>
                    <div class="text-right">
                        <span class="bg-white/20 text-white px-4 py-2 rounded-full font-semibold text-sm">
                            @(Model.ReturnedOn != null ? "RETURNED" : DateTime.Now > Model.DueDate ? "OVERDUE" : "ACTIVE")
                        </span>
                    </div>
                </div>
            </div>

            <div class="p-8">
                <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
                    <!-- Movie Information -->
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="fas fa-film text-blue-500 mr-3"></i>
                            Movie Information
                        </h2>

                        <div class="space-y-4">
                            <div class="flex items-center space-x-3 p-4 bg-gray-50 rounded-xl">
                                <div class="w-12 h-12 bg-blue-500 rounded-lg flex items-center justify-center">
                                    <i class="fas fa-ticket-alt text-white"></i>
                                </div>
                                <div>
                                    <p class="text-sm text-gray-600">Movie Title</p>
                                    <p class="font-semibold text-gray-900 text-lg">@Model.Movie.Title</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-2 gap-4">
                                <div class="p-4 bg-gray-50 rounded-xl">
                                    <p class="text-sm text-gray-600">Genre</p>
                                    <p class="font-semibold text-gray-900">@Model.Movie.Genre</p>
                                </div>
                                <div class="p-4 bg-gray-50 rounded-xl">
                                    <p class="text-sm text-gray-600">Release Year</p>
                                    <p class="font-semibold text-gray-900">@Model.Movie.ReleaseYear</p>
                                </div>
                            </div>

                            <div class="p-4 bg-gray-50 rounded-xl">
                                <p class="text-sm text-gray-600 mb-2">Description</p>
                                <p class="text-gray-700">@Model.Movie.Description</p>
                            </div>
                        </div>
                    </div>

                    <!-- Rental & Payment Details -->
                    <div>
                        <h2 class="text-2xl font-bold text-gray-900 mb-6 flex items-center">
                            <i class="fas fa-receipt text-green-500 mr-3"></i>
                            Rental & Payment Details
                        </h2>

                        <!-- Rental Timeline -->
                        <div class="space-y-4 mb-6">
                            <div class="flex items-center justify-between p-4 bg-blue-50 rounded-xl">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                                        <i class="fas fa-play text-white"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">Rented On</p>
                                        <p class="font-semibold text-gray-900">@Model.RentedOn.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                    </div>
                                </div>
                            </div>

                            <div class="flex items-center justify-between p-4 @(DateTime.Now > Model.DueDate && Model.ReturnedOn == null ? "bg-red-50" : "bg-yellow-50") rounded-xl">
                                <div class="flex items-center space-x-3">
                                    <div class="w-10 h-10 @(DateTime.Now > Model.DueDate && Model.ReturnedOn == null ? "bg-red-500" : "bg-yellow-500") rounded-full flex items-center justify-center">
                                        <i class="fas fa-clock text-white"></i>
                                    </div>
                                    <div>
                                        <p class="text-sm text-gray-600">Due Date</p>
                                        <p class="font-semibold @(DateTime.Now > Model.DueDate && Model.ReturnedOn == null ? "text-red-600" : "text-gray-900")">
                                            @Model.DueDate.ToString("MMM dd, yyyy 'at' h:mm tt")
                                        </p>
                                    </div>
                                </div>
                            </div>

                            @if (Model.ReturnedOn != null)
                            {
                                <div class="flex items-center justify-between p-4 bg-green-50 rounded-xl">
                                    <div class="flex items-center space-x-3">
                                        <div class="w-10 h-10 bg-green-500 rounded-full flex items-center justify-center">
                                            <i class="fas fa-check text-white"></i>
                                        </div>
                                        <div>
                                            <p class="text-sm text-gray-600">Returned On</p>
                                            <p class="font-semibold text-green-600">@Model.ReturnedOn.Value.ToString("MMM dd, yyyy 'at' h:mm tt")</p>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Payment Information -->
                        <div class="bg-gray-50 rounded-xl p-6">
                            <h3 class="text-lg font-semibold text-gray-900 mb-4 flex items-center">
                                <i class="fas fa-credit-card text-purple-500 mr-2"></i>
                                Payment Information
                            </h3>

                            @if (Model.Payment != null)
                            {
                                <div class="space-y-3">
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Payment Status</span>
                                        <span class="bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-semibold flex items-center">
                                            <i class="fas fa-check-circle mr-1"></i>
                                            @Model.Payment.Status
                                        </span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Payment Method</span>
                                        <span class="font-semibold text-gray-900">@Model.Payment.PaymentMethod</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Amount Paid</span>
                                        <span class="font-bold text-green-600 text-xl">@Model.Payment.Amount.ToString("C2")</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Paid On</span>
                                        <span class="font-semibold text-gray-900">@Model.Payment.PaidOn.ToString("MMM dd, yyyy 'at' h:mm tt")</span>
                                    </div>
                                    <div class="flex justify-between items-center">
                                        <span class="text-gray-600">Payment ID</span>
                                        <span class="font-mono text-gray-700">#@Model.Payment.PaymentId</span>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="fas fa-clock text-yellow-500 text-3xl mb-3"></i>
                                    <p class="text-gray-600">Payment pending</p>
                                    <p class="text-sm text-gray-500">No payment information available yet</p>
                                </div>
                            }
                        </div>

                        <!-- Rental Cost -->
                        <div class="mt-4 bg-white border border-gray-200 rounded-xl p-4">
                            <div class="flex justify-between items-center">
                                <span class="text-gray-600">Rental Cost</span>
                                <span class="font-bold text-gray-900 text-xl">@Model.Price.ToString("C2")</span>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="mt-8 pt-6 border-t border-gray-200 flex space-x-4">
                    @if (Model.ReturnedOn == null)
                    {
                        <form method="post" action="@Url.Action("ReturnRental")"
                              onsubmit="return confirm('Are you sure you want to return this movie?')" class="flex-1">
                            <input type="hidden" name="rentalId" value="@Model.RentalId" />
                            <button type="submit"
                                    class="w-full bg-green-600 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2">
                                <i class="fas fa-undo"></i>
                                <span>Return Movie</span>
                            </button>
                        </form>
                    }

                    <a href="@Url.Action("Index", "MyMovies")"
                       class="flex-1 bg-blue-600 text-white py-3 px-6 rounded-xl font-semibold shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center space-x-2">
                        <i class="fas fa-compass"></i>
                        <span>Rent More Movies</span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</body>
</html>