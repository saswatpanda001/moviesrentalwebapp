@{
    ViewData["Title"] = "Generate Reports";
}

<div class="max-w-7xl mx-auto px-6 py-10">

    <h2 class="text-3xl font-bold mb-8 text-gray-800">📄 Generate Reports</h2>

    <!-- Main Card -->
    <div class="bg-white shadow-lg rounded-2xl overflow-hidden border border-gray-200">
        <div class="bg-gray-100 px-6 py-4 border-b">
            <h5 class="text-xl font-semibold">Export Data to CSV</h5>
        </div>

        <div class="p-6">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

                <!-- Left Description -->
                <div class="md:col-span-2">
                    <h6 class="text-lg font-semibold mb-2">📘 Complete System Report</h6>
                    <p class="text-gray-600 mb-4">
                        Download a comprehensive CSV file containing data from all system tables:
                        Movies, Users, Rentals, Payments, and Reviews.
                    </p>

                    <ul class="space-y-2">
                        <li class="flex items-center text-gray-700">
                            <span class="text-xl mr-2">📊</span> Movies data (Title, Genre, Stock, Price)
                        </li>
                        <li class="flex items-center text-gray-700">
                            <span class="text-xl mr-2">👥</span> Users data (Name, Email, Role)
                        </li>
                        <li class="flex items-center text-gray-700">
                            <span class="text-xl mr-2">🎬</span> Rentals data (Dates, Due, Charges)
                        </li>
                        <li class="flex items-center text-gray-700">
                            <span class="text-xl mr-2">💳</span> Payments data (Amount, Method, Status)
                        </li>
                        <li class="flex items-center text-gray-700">
                            <span class="text-xl mr-2">⭐</span> Reviews data (Ratings, Comments, Dates)
                        </li>
                    </ul>
                </div>

                <!-- Right Download Card -->
                <div class="flex justify-center">
                    <div class="bg-gray-50 border border-gray-300 rounded-xl p-6 text-center w-full max-w-sm shadow">
                        <div class="text-blue-600 text-5xl mb-3">📁</div>
                        <h6 class="text-lg font-semibold">Complete Report</h6>
                        <p class="text-gray-500 text-sm mb-4">
                            All system data in one CSV file
                        </p>

                        <a href="@Url.Action("GenerateCompleteReport", "Reports")"
                           class="block w-full bg-green-600 hover:bg-green-700 text-white
                                  font-semibold py-2.5 rounded-lg transition">
                            ⬇ Download Complete CSV
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <h3 class="text-2xl font-bold mt-10 mb-4">📊 Quick Stats</h3>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-4 gap-6">

        <div class="bg-white shadow-md rounded-2xl p-6 text-center hover:scale-[1.03] transition">
            <h3 class="text-4xl font-bold text-blue-600">@ViewBag.TotalMovies</h3>
            <p class="text-gray-500">Total Movies</p>
        </div>

        <div class="bg-white shadow-md rounded-2xl p-6 text-center hover:scale-[1.03] transition">
            <h3 class="text-4xl font-bold text-green-600">@ViewBag.TotalUsers</h3>
            <p class="text-gray-500">Total Users</p>
        </div>

        <div class="bg-white shadow-md rounded-2xl p-6 text-center hover:scale-[1.03] transition">
            <h3 class="text-4xl font-bold text-yellow-500">@ViewBag.TotalRentals</h3>
            <p class="text-gray-500">Total Rentals</p>
        </div>

        <div class="bg-white shadow-md rounded-2xl p-6 text-center hover:scale-[1.03] transition">
            <h3 class="text-4xl font-bold text-teal-600">@ViewBag.TotalPayments</h3>
            <p class="text-gray-500">Total Payments</p>
        </div>

    </div>

</div>
